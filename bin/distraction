#!/usr/bin/env ruby

require 'distraction'
require 'rubygems'

begin
	# get arguments
	args = ARGV.join(" ")
	abort(Gem::Specification::load("distraction.gemspec").version.to_s) if args == "--version" || args == "-v"

	case args
	when "til"
		Distraction.reddit_TIL(false)
	when "til open"
		Distraction.reddit_TIL(true)
	else
		puts %Q(I can't do that! But I can do the following:
  distraction til          Displays an interesting fact
  distraction til open     Displays a fact and opens up a URL with more information)
	end

rescue Interrupt => e # handle CTRL + C cleanly
	puts ""
end